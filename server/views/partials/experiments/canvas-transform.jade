.container.transition
  .well.absolute-center.text-center
    canvas.transition#canvas
  .well.controls
    div major transform
      input(type="number", name="transform", min="0.1", max="10", ng-model="majorTransform[0]")
      input(type="number", name="transform", min="0.1", max="10", ng-model="majorTransform[1]")
      input(type="number", name="transform", min="0.1", max="10", ng-model="majorTransform[2]")
      input(type="number", name="transform", min="0.1", max="10", ng-model="majorTransform[3]")
    div minor transform
      input(type="number", name="transform", min="0.1", max="10", ng-model="minorTransform[0]")
      input(type="number", name="transform", min="0.1", max="10", ng-model="minorTransform[1]")
      input(type="number", name="transform", min="0.1", max="10", ng-model="minorTransform[2]")
      input(type="number", name="transform", min="0.1", max="10", ng-model="minorTransform[3]")
